-# coding: UTF-8
%nav.navbar.navbar-default{role: "navigation", style:"margin-bottom:0px;"}
  .container
    .row
      %div{class: "#{mobile? ? 'col-sm-12' : 'col-sm-8 col-sm-offset-2'}", style: "padding-left:0px;"}
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to Setting.website.title, "/", class: "navbar-brand"
        / Collect the nav links, forms, and other content for toggling
        .collapse.navbar-collapse{role: "navigation", id:"bs-example-navbar-collapse-1"}
          %ul.nav.navbar-nav.navbar-right
            - unless current_user
              %li 
                = link_to "登陆", "/users/login"
              %li 
                = link_to "注册", "/users/register"
            - else
              %input#navbar_right_lis{type: "hidden", value: 1}/
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  %i.glyphicon.glyphicon-cog
                  %b.caret
                %ul.dropdown-menu
                  %li
                    %a{:href => "/cpanel"}
                      %i.glyphicon.glyphicon-wrench
                      后台操作
                  %li.divider
                  %li
                    %a{:href => "/users/logout"}
                      %i.glyphicon.glyphicon-log-out
                      退出
