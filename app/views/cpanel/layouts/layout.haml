-# coding: UTF-8
!!!
%html
  %head
    %title= Settings.website.title
    %meta{name: "renderer", content:"webkit"}
    %meta{"http-equiv" => "X-UA-Compatible", content: "IE=edge"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %meta{"http-equiv" => "content-type", content: "text/html", charset: "UTF-8"}
    %link{href: "#{Settings.website.favicon}", rel: "shortcut icon"}
    = javascript_include_tag "jquery-2.1.1.min.js"
    = javascript_include_tag "bootstrap.320.min.js"
    = javascript_include_tag "nprogress.js"
    = javascript_include_tag "headroom.min.js"
    = javascript_include_tag "jQuery.headroom.js"
    = javascript_include_tag "application.js"
    = stylesheet_link_tag "nprogress.css"
    = stylesheet_link_tag "bootstrap.320.min.css"
    = stylesheet_link_tag "application.css"
    -if is_mobile = mobile? 
      %meta{:content => "no", :name => "apple-mobile-web-app-capable"}
      %meta{:content => "True", :name => "HandheldFriendly"}
      %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no", :name => "viewport"}/
      :css
        body { max-width: 1000px; min-width:300px; }
        .mobile-hidden { display: none; }
        .table { table-layout: fixed; }
        .table td { word-break:break-all }

  %body{style: "background:#f0f0f0;"}
    = haml :"../layouts/_header"
    .container
      .row
        %div{class: "#{is_mobile ? 'col-sm-12' : 'col-sm-8 col-sm-offset-2'}", style: "padding-left:0px;text-align:center;"}
          .loading.hidden 加载中...
          = flash_message
      .row{style: "margin-left:0px;"}
        %div{class: "#{is_mobile ? 'col-sm-12' : 'col-sm-8 col-sm-offset-2'}", style: "padding-left:0px;"}
          = yield

    .container
      .row{style: "text-align: center;"}
        .footer &copy; #{Time.now.strftime("%Y")} #{Settings.website.footer}
